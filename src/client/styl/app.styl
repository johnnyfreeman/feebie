border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments


/**
 * Color Swatches
 */
turquoise = #1ABC9C    // turquoise
green-sea = #16A085    // dark turquoise
emerland = #2ECC71     // green
nephritis = #27AE60    // dark green
peter-river = #3498DB  // blue
belize-hole = #2980B9  // dark blue
amethyst = #9B59B6     // purple
wisteria = #8E44AD     // dark purple
wet-asphalt = #34495E  // dark blue
midnight-blue = #2C3E50// extra dark blue
sun-flower = #F1C40F   // yellow
orange = #F39C12       // dark yellow
carrot = #E67E22       // orange
pumpkin = #D35400      // dark orange
alizarin = #E74C3C     // red
pomegranate = #C0392B  // dark red
clouds = #ECF0F1       // light gray
silver = #BDC3C7       // silver
concrete = #95A5A6     // gray
asbestos = #7F8C8D     // dark gray

/**
 * Arrows
 */
options-arrow-size 8px

#main
  overflow hidden
  height 0px

/**
 * Search box
 */
#search
  position relative
  overflow hidden

  .fa-search
    color wet-asphalt
    font-size 28px
    position absolute
    top 242px
    right 20px

  input
    font-size 20px
    height 60px

    &:-webkit-input-placeholder
      color silver

    &:focus, &:active
      outline none
      border-color turquoise



/**
 * Fee Finder
 */
#code
  color midnight-blue
  text-align left
  position relative


  /**
   * Header
   */
  .header
    margin-bottom 15px
    border-radius(8px)

    h1
      color wet-asphalt
      font-size 60px
      margin-top 0

      small
        color concrete

    .fa-times-circle,
    .fa-times-circle-o
      margin-top 2px
      margin-right 17px
      font-size 36px
    
    .fa-times-circle-o
      color pomegranate

    .fa-times-circle
      color clouds


  /**
   * Configuration
   */
  config-spacing = 30px
  config-bg = wet-asphalt

  .options
    border-radius 4px
    background-color config-bg
    color white
    list-style none
    margin 0px
    padding 15px
    position relative

    // options arrow
    &:before
      content ""
      border-style solid
      border-width 0 options-arrow-size options-arrow-size options-arrow-size
      border-color transparent transparent config-bg transparent
      height 0px
      position absolute
      left 53px
      top -options-arrow-size
      width 0px
      -webkit-transform rotate(360deg)

    .option
      display inline
      padding-left config-spacing
      padding-right config-spacing
      border-left 1px dotted asbestos

      &:first-child
        padding-left 0
        border-left none

    a
      color turquoise

    .faded
      color asbestos

    .fac-true .nonfac, .fac-false .fac
      display none


  /**
   * Fees
   */
  .fees
    margin 15px 0

    .fee
      background-color #f8f8f8
      border-radius 4px
      display inline-block
      padding 10px 15px
      width 250px
      margin-left 15px
      margin-bottom 15px
      text-align center

      &:first-child
        margin-left 0

      .description
        border-radius(0)
        background-color transparent
        padding 0px 15px 20px
        text-transform uppercase
        font-size 13px
        color concrete

      .amount
        font-size 36px
        padding 0
        font-weight normal

        .dollar
          font-size 16px
          color nephritis
          vertical-align 12px

      .btn-copy-container
        position relative
        display block
        // overflow hidden
        height 50px
        width 100%

        // disable css animation here
        .btn, .btn-content
          -moz-transition none
          -webkit-transition none
          -o-transition none
          transition none

        .btn
          position absolute
          left 0

        .btn-copied
          top 0
        .btn-copy
          top -50px

        .btn-content
          position absolute
          left 30px

        .btn-content-copied
          top 0
        .btn-content-copy
          top -50px

      .copy-to-clipboard
        position relative
        overflow hidden

        .copied
          position absolute
          background-color emerland
          color white
          top 0
          left -348px
          -moz-transition none
          -webkit-transition none
          -o-transition color 0 ease-in
          transition none

/**
 * Popovers
 */
.popover
  color #333
  background-color transparent
  border 0px solid green-sea
  padding 0

  p
    margin 0

  .popover-title
    display none

  .popover-content
    background-color clouds
    border-radius(5px)

  input
    background-color white
    border-color silver
    // margin -10px -15px
    margin-bottom 0
    color midnight-blue
    width 146px
    padding 4px 5px

    &:-webkit-input-placeholder,  /* WebKit browsers */
    &:-moz-placeholder,  /* Mozilla Firefox 4 to 18 */
    &:-moz-placeholder,  /* Mozilla Firefox 19+ */
    &:-ms-input-placeholder /* Internet Explorer 10+ */
      color silver

  button
    margin-left 3px

  ul
    margin -10px -15px
    border-radius(5px)
    overflow hidden
    background-color clouds
    min-width 80px

    li
      list-style none
      // display inline

      // rounded top corners
      &:first-child
        span, a
          border-radius(5px 5px 0 0)

      // rounded bottom corners
      &:last-child
        span, a
          border-radius(0 0 5px 5px)

      span, a
        display block
        padding 8px 13px

      a
        background-color transparent
        color wet-asphalt
        text-decoration none

        &:hover
          background-color silver

      span
        background-color clouds
        color silver

  // arrow
  &:.bottom
    .arrowafter
      border-bottom-color clouds


/**
 * Notifications
 */
#notifications
  position fixed
  top 0
  left 0
  width 100%
  margin 0
  text-align center

  .notification
    background-color clouds
    color wet-asphalt
    display inline-block
    padding 10px
    border-radius(0 0 5px 5px)

    .notification-dismiss
      color silver
      font-weight bold
      margin-left 3px

    &.notification-info
      background-color peter-river
      color white

      .notification-dismiss
        color belize-hole

    &.notification-error
      background-color alizarin
      color white

      .notification-dismiss
        color pomegranate

    &.notification-warning
      background-color sun-flower
      color white

      .notification-dismiss
        color orange

    &.notification-success
      background-color emerland
      color white

      .notification-dismiss
        color nephritis

    a
      text-decoration none

    i
      margin-right 3px


/**
 * Misc
 */


