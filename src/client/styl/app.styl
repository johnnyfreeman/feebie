/**
 * Search box
 */
#search
  position relative
  overflow hidden

  .fa-search
    color #444
    font-size 28px
    position absolute
    top 242px
    right 20px

  input
    border-color #e5dbc5
    font-size 20px
    height 60px

    &:-webkit-input-placeholder
      color silver

    &:focus, &:active
      outline none
      border-color peter-river



/**
 * Fee Finder
 */
#code
  color midnight-blue
  text-align left
  position relative

  /**
   * Header
   */
  .header
    margin-bottom 15px
    border-radius borderRadius

    h1
      color #444
      font-size 40px
      margin-top 0

      small
        color concrete

    .fa-times-circle,
    .fa-times-circle-o
      margin-top 2px
      margin-right 17px
      font-size 36px
    
    .fa-times-circle-o
      color pomegranate

    .fa-times-circle
      color clouds


  /**
   * Configuration
   */
  config-spacing = 30px
  config-bg = #262729

  .options
    border-radius borderRadius
    background-color config-bg
    color white
    list-style none
    // margin 0px
    padding 15px
    position relative

    // options arrow
    &:before
      content ""
      border-style solid
      border-width 0 optionsArrowSize optionsArrowSize optionsArrowSize
      border-color transparent transparent config-bg transparent
      height 0px
      position absolute
      left 53px
      top -(optionsArrowSize)
      width 0px
      -webkit-transform rotate(360deg)

    .option
      display inline
      padding-left config-spacing
      padding-right config-spacing
      border-left 1px dotted asbestos

      &:first-child
        padding-left 0
        border-left none

      input
        &:focus
          border-color peter-river
        

    a
      color peter-river

    .faded
      color asbestos

    .fac-true .nonfac, .fac-false .fac
      display none


  /**
   * Fees
   */
  .fees
    margin-bottom 15px
    margin-top 15px

    .fee
      background-color white
      border-radius borderRadius
      // display inline-block
      padding 10px 15px
      // width 315px
      // margin-left 15px
      // margin-bottom 15px
      text-align center

      &:first-child
        // margin-left 0

      .description
        border-radius 0
        background-color transparent
        padding 0px 15px 20px
        text-transform uppercase
        font-size 13px
        color concrete

      .amount
        font-size 36px
        padding 0
        font-weight normal

        .dollar
          font-size 16px
          color nephritis
          vertical-align 12px

/**
 * Popovers
 */
.popover
  color #333
  background-color transparent
  border 0px solid green-sea
  padding 0

  p
    margin 0

  .popover-title
    display none

  .popover-content
    background-color white
    border-radius borderRadius

  input
    background-color white
    border-color silver
    margin-bottom 0
    color midnight-blue
    width 146px

    &:-webkit-input-placeholder,  /* WebKit browsers */
    &:-moz-placeholder,  /* Mozilla Firefox 4 to 18 */
    &:-moz-placeholder,  /* Mozilla Firefox 19+ */
    &:-ms-input-placeholder /* Internet Explorer 10+ */
      color silver

  button
    margin-left 3px

  ul
    margin -10px -15px
    border-radius borderRadius
    overflow hidden
    background-color white
    min-width 80px
    padding-left 0px

    li
      list-style none
      // display inline

      // rounded top corners
      &:first-child
        span, a
          border-radius borderRadius borderRadius 0 0

      // rounded bottom corners
      &:last-child
        span, a
          border-radius 0 0 borderRadius borderRadius

      span, a
        display block
        padding 8px 13px

      a
        text-decoration none

        &:hover
          background-color peter-river
          color white !important

      span
        color silver

  // arrow
  &:.bottom
    .arrowafter
      border-bottom-color clouds


/**
 * Notifications
 */
#notifications
  position fixed
  top 0
  right 0
  margin 10px
  padding-left 0

  .notification
    background-color rgba(0,0,0,0.3)
    color #fff
    padding 10px
    border-radius borderRadius
    margin 10px
    list-style none
    text-align left

    &:hover
      background-color rgba(0,0,0,0.7)

    .notification-dismiss
      color silver
      float right
      font-weight bold
      margin-left 3px

    &.notification-info
      background-color peter-river
      color white

      .notification-dismiss
        color belize-hole

    &.notification-error
      background-color alizarin
      color white

      .notification-dismiss
        color pomegranate

    &.notification-warning
      background-color sun-flower
      color white

      .notification-dismiss
        color orange

    &.notification-success
      background-color emerland
      color white

      .notification-dismiss
        color nephritis

    a
      text-decoration none

    i
      margin-right 3px


/**
 * Misc
 */
#header
  padding-top 40px
  padding-bottom 30px

  img
    max-width 13px
    vertical-align 0
    margin-right 2px

  &.demo-headline
    color #444
    padding 40px 0 30px
    text-align center

    img
      max-width 65px
      margin-right 5px
  
  small
    color silver
    a
      color silver



footer
  background-color transparent
  color silver
  margin-bottom 50px
  text-align center

  a
    color concrete
    font-weight normal

  .pipe
    color clouds
    display inline-block
    margin 0 5px

.muted
  color concrete

.alert-error
  background-color alizarin
  border-color alizarin
  color white
  text-shadow 0 1px 0 pomegranate

.alert
  padding-bottom 21px // 14px
  padding-top 21px // 14px

// add bottom border to buttons
.btn
  border-bottom 2px solid midnight-blue

  &.btn-primary
    border-bottom-color green-sea

  &.btn-info
    border-bottom-color belize-hole

  &.btn-success
    border-bottom-color nephritis

  &.btn-danger
    border-bottom-color pomegranate

  &.btn-warning
    border-bottom-color orange

.close-fee
  cursor pointer

input:active, btn:active,
input:focus, btn:focus
  outline none