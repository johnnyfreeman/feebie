border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments


/**
 * Color Swatches
 */
turquoise = #1ABC9C    // turquoise
green-sea = #16A085    // dark turquoise
emerland = #2ECC71     // green
nephritis = #27AE60    // dark green
peter-river = #3498DB  // blue
belize-hole = #2980B9  // dark blue
amethyst = #9B59B6     // purple
wisteria = #8E44AD     // dark purple
wet-asphalt = #34495E  // dark blue
midnight-blue = #444   // extra dark blue
sun-flower = #F1C40F   // yellow
orange = #F39C12       // dark yellow
carrot = #E67E22       // orange
pumpkin = #D35400      // dark orange
alizarin = #E74C3C     // red
pomegranate = #C0392B  // dark red
clouds = #eee          // light gray
silver = #bbb          // silver
concrete = #999        // gray
asbestos = #777        // dark gray

// options
optionsArrowSize = 6px

// general
borderRadius = 4px

body
  background-color #F7F5EF

// #main
